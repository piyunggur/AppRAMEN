<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".Activity.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBack"
        />

    <ImageView
        android:id="@+id/shoppingfm_background_head"

        android:layout_width="match_parent"
        android:layout_height="75dp"

        android:background="@color/colorMenu"
        android:layout_alignParentTop="true"
        />


    <Button
        android:id="@+id/shoppingfm_back"

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_marginStart="15dp"

        android:background="@drawable/back"
        />


    <TextView
        android:id="@+id/shoppingfm_text_head"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"

        android:gravity="center"
        android:text="สมัครสมาชิก"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        />


    <TextView
        android:id="@+id/shoppingfm_text_menu"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoppingfm_background_head"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        android:text="รายการสั่งซื้อ"
        android:textSize="25sp"
        android:textColor="@color/colorYellow"
        />

    <Button
        android:id="@+id/shoppingfm_use"

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/shoppingfm_background_head"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"


        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shoppingfm_use"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="#49000000"
            >


            <android.support.v7.widget.RecyclerView
                android:id="@+id/order_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/homefm_icon_sale"
                android:orientation="vertical"
                >
            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>



    </ScrollView>


</RelativeLayout>