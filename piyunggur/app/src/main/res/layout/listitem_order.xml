<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_ivew="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    card_ivew:cardCornerRadius="0dp"
    card_ivew:cardBackgroundColor= "#56000000"
    android:id="@+id/order_listitem"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_ivew:cardCornerRadius="8dp"
            card_ivew:cardBackgroundColor="#00000000"
            >

            <ImageView
                android:id="@+id/order_image"

                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                />

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/order_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="210dp"

            android:text="รายชื่ออาหาร"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            />

        <TextView
            android:id="@+id/order_textprice"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_name"
            android:layout_alignStart="@id/order_name"
            android:layout_marginTop="20dp"

            android:text="ราคา"
            android:textColor="@color/colorYellow"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/order_price"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_name"
            android:layout_marginStart="260dp"
            android:layout_marginTop="20dp"

            android:text="125฿"
            android:textColor="@color/colorYellow"
            android:textSize="18sp"
            />


    </RelativeLayout>



</android.support.v7.widget.CardView>