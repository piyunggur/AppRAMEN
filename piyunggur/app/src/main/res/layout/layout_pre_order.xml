<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreOrderActivity"
    android:background="@drawable/background_main"
    >

    <TextView
        android:id="@+id/pre_order_head"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"

        android:text="ข้อมูลสถานที่จัดส่ง"
        android:textColor="@color/colorYellow"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/pre_order_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pre_order_head"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"

        android:text="ชื่อผู้สั่งซื้อ"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/pre_order_at"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pre_order_name"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"

        android:text="ที่อยู่"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/pre_order_headmenu"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pre_order_at"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"

        android:text="iBanking"
        android:textSize="18sp"
        android:textColor="@color/colorYellow"
        />

    <Button
        android:id="@+id/pre_order_menu1"

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/pre_order_headmenu"
        android:layout_marginTop="20dp"

        android:text="ธนาคารกรุงไทย"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorSale"
        android:paddingStart="15dp"
        android:gravity="fill_vertical"
        />


    <Button
        android:id="@+id/pre_order_menu2"

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/pre_order_menu1"
        android:layout_marginTop="5dp"

        android:text="ธนาคารกรุงศรีอยุธยา"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorSale"
        android:paddingStart="15dp"
        android:gravity="fill_vertical"
        />

    <Button
        android:id="@+id/pre_order_menu3"

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/pre_order_menu2"
        android:layout_marginTop="5dp"

        android:text="ธนาคารกสิกรไทย"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorSale"
        android:paddingStart="15dp"
        android:gravity="fill_vertical"
        />

    <Button
        android:id="@+id/pre_order_menu4"

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/pre_order_menu3"
        android:layout_marginTop="5dp"

        android:text="ธนาคารกรุงเทพ"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorSale"
        android:paddingStart="15dp"
        android:gravity="fill_vertical"
        />

</RelativeLayout>