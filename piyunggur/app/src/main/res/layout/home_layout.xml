<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    >

    <RelativeLayout
        android:id="@+id/home_news_r"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="184dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shadow_rect"
            />

        <RelativeLayout
            android:id="@+id/home_news"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            >

            <android.support.v4.view.ViewPager
                android:id="@+id/home_slide_vp_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <LinearLayout
                android:id="@+id/home_slide_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_news"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/home_bt_main_manu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/main_manu1"
                />

            <Button
                android:id="@+id/home_bt_main_manu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/main_manu2"
                />

            <Button
                android:id="@+id/home_bt_main_manu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/main_manu3"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/test_recyclerview"
                    android:orientation="horizontal"
                    >

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</ScrollView>