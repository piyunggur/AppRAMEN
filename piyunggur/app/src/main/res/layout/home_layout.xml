<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    >

    <RelativeLayout
        android:id="@+id/home_news_r"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="184dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shadow_rect"
            />

        <RelativeLayout
            android:id="@+id/home_news"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            >

            <android.support.v4.view.ViewPager
                android:id="@+id/home_slide_vp_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <LinearLayout
                android:id="@+id/home_slide_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_news"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/home_main_manu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="เมนูประหยัด"
                android:textColor="@color/YellowColor"
                android:textSize="20sp"
                android:gravity="start"
                android:paddingStart="7dp"
                android:paddingTop="5dp"
                android:background="@drawable/main_manu1"
                />

            <Button
                android:id="@+id/home_main_manu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="เมนูสุขภาพ"
                android:textColor="@color/YellowColor"
                android:textSize="20sp"
                android:gravity="start"
                android:paddingStart="7dp"
                android:paddingTop="5dp"
                android:background="@drawable/main_manu2"
                />

            <Button
                android:id="@+id/home_main_manu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="สั่งแยก"
                android:textColor="@color/YellowColor"
                android:textSize="20sp"
                android:gravity="start"
                android:paddingStart="7dp"
                android:paddingTop="5dp"
                android:background="@drawable/main_manu3"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_marginTop="20dp"
                android:background="@color/BackColor"
                >

                <ImageView
                    android:id="@+id/icon_sale"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/label_sale"
                    />

                <TextView
                    android:id="@+id/text_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/icon_sale"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="50dp"
                    android:text="โปรโมชั่น"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_below="@id/icon_sale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/promotion_recyclerview"
                    android:orientation="horizontal"
                    >
                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#c8000000"
                >

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/manu_recyclerview"
                    android:orientation="horizontal"
                    >

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</ScrollView>