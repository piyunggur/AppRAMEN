<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ReportActivity"

    android:background="@drawable/main_background"
    >


    <Spinner
        android:id="@+id/report_toppic"

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorMain"
        android:padding="5dp"
        >

    </Spinner>


    <EditText
        android:id="@+id/report_text"

        android:layout_width="320dp"
        android:layout_height="250dp"
        android:layout_below="@id/report_toppic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="left"
        android:padding="10dp"
        android:ems="15"

        android:background="@color/colorWhite"
        />

    <Button
        android:id="@+id/report_submit"

        android:layout_width="295dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/report_text"
        android:layout_marginTop="40dp"

        android:text="ส่ง"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_use_code_function"
        />



</RelativeLayout>