<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity"

    android:background="@drawable/background_fornt"
    >


    <EditText
        android:id="@+id/register_etuser"

        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"

        android:ems="10"
        android:inputType="textEmailAddress"
        android:theme="@style/EdittextWhite"
        android:hint="ชื่อผู้ใช้"
        android:textSize="16sp"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        />


    <EditText
        android:id="@+id/register_etpass1"

        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_etuser"
        android:layout_marginTop="25dp"

        android:hint="รหัสผ่าน"
        android:textSize="16sp"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:theme="@style/EdittextWhite"
        />


    <EditText
        android:id="@+id/register_etpass2"

        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_etpass1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"

        android:hint="รหัสผ่านอีกครั้งเพื่อยืนยัน"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/EdittextWhite"
        />


    <Button
        android:id="@+id/register_btsummit"

        android:layout_width="295dp"
        android:layout_height="43dp"
        android:layout_below="@id/register_etpass2"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"

        android:gravity="center"
        android:background="@drawable/button_register_function"
        android:text="ดำเนินการต่อ"
        android:textSize="16sp"
        android:textColorHint="@color/colorMain"
        android:textColor="@color/colorMain"
        />

</RelativeLayout>