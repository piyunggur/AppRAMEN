<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"

    android:background="@drawable/background_fornt"
    >



    <ImageView
        android:id="@+id/login_logo"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"

        app:srcCompat="@drawable/logo"
        />


    <TextView
        android:id="@+id/login_head"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"

        android:text="เข้าสู่ระบบ"
        android:textColor="@color/colorWhite"
        android:textSize="35sp"
        android:gravity="center"
        />


    <EditText
        android:id="@+id/login_user"

        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"

        android:theme="@style/EdittextWhite"
        android:hint="ชื่อสมาชิก"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        />


    <EditText
        android:id="@+id/login_password"

        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"

        android:hint="รหัสผ่าน"
        android:inputType="textPassword"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="16sp"
        android:theme="@style/EdittextWhite"
        />


    <Button
        android:id="@+id/login_submit"

        android:layout_width="295dp"
        android:layout_height="43dp"
        android:layout_below="@id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"

        android:background="@drawable/button_submit_function"
        android:text="ดำเนินการต่อ"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/login_register"

        android:layout_width="295dp"
        android:layout_height="43dp"
        android:layout_below="@id/login_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"

        android:background="@drawable/button_register_function"
        android:text="สมัครสมาชิก"
        android:textColor="@color/colorMain"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/login_facebook"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/login_register"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="22dp"

        android:background="@drawable/button_facebook_function"
        android:text="F"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        />


    <Button
        android:id="@+id/login_gmail"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/login_register"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="60dp"

        android:background="@drawable/button_gmail_function"
        android:text="G"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />



</RelativeLayout>